{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "ragbot-ui/package.json", "use": "@vercel/static-build", "config": { "distDir": "build" } }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/$1.js", "methods": ["GET","POST","PUT","DELETE","OPTIONS"] },
    { "src": "/(.*)", "dest": "ragbot-ui/build/$1" }
  ]
}
